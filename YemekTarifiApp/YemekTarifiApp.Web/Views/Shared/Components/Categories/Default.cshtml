@using YemekTarifiApp.Entity.Concrate
@using YemekTarifiApp.Entity;

@model List<Category>
<div class="list-group">
    <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==null ? "active" : "")"
       asp-controller="YemekTarifi"
       asp-action="FoodList"
       asp-route-categoryurl="">Tümünü Göster</a>
    @foreach (var category in Model)
    {
        <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.Url ? "active" : "")"
       asp-controller="YemekTarifi"
       asp-action="FoodList"
       asp-route-categoryurl=@category.Url>@category.Name</a>
    }
</div>