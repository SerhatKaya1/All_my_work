@model List<ProductDto>
<div class="row">
     <div class="col-3">
         @await Component.InvokeAsync("Categories")
         @await Html.PartialAsync("_Search")
     </div>
     <div class="col-9">
         @if (Model.Count==0)
        {
            @await Html.PartialAsync("_NoProduct")
        }
        else
        {
            <div class="row">
                @foreach (var productDto in Model)
                {
                    <div class="col-4">
                        @await Html.PartialAsync("_ProductPartial", productDto)
                    </div>
                }
            </div>
        }
    </div>
</div>