@using YemekTarifiApp.Entity.Concrate
@model Food

<!-- Button trigger modal -->
<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalFoodDelete_@Model.Id">
    Sil
</button>

<!-- Modal -->
<div class="modal fade" id="modalFoodDelete_@Model.Id" tabindex="-1" aria-labelledby="modalLabelFoodDelete_@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabelFoodDelete_@Model.Id">Dikkat!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <img src="~/YemekTarifiImages/@Model.ImageUrl" width="135" />
                </div>
                <div class="mt-3 ms-1">
                    <strong>@Model.Name</strong> adlı yemeği silmek istediğinizden emin misiniz?
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <a class="btn btn-primary"
                   id="foodDeleteForm_@Model.Id"
                   asp-area="Admin"
                   asp-controller="Food"
                   asp-action="Delete"
                   asp-route-id="@Model.Id">
                    Evet
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>

            </div>
        </div>
    </div>
</div>
